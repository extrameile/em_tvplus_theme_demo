<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<T3DataStructure>
    <meta type="array">
        <title>Bootstrap Card</title>
        <description>Your description goes here</description>
    </meta>
    <ROOT type="array">
        <el type="array">
            <field_headline type="array">
                <TCEforms type="array">
                    <label>field_headline</label>
                    <config type="array">
                        <type>input</type>
                        <size>48</size>
                        <eval>trim</eval>
                    </config>
                </TCEforms>
            </field_headline>
            <field_copy type="array">
                <TCEforms type="array">
                    <label>field_copy</label>
                    <config type="array">
                        <type>text</type>
                        <cols>48</cols>
                        <rows>5</rows>
                        <softref>typolink_tag,images,email[subst],url</softref>
                        <enableRichtext type="boolean">1</enableRichtext>
                        <richtextConfiguration>default</richtextConfiguration>
                    </config>
                </TCEforms>
            </field_copy>
            <field_link_url type="array">
                <type>attr</type>
                <TCEforms type="array">
                    <label>field_link_url</label>
                    <config type="array">
                        <type>input</type>
                        <size>48</size>
                        <max>256</max>
                        <checkbox></checkbox>
                        <eval>trim</eval>
                        <wizards type="array">
                            <_PADDING type="integer">2</_PADDING>
                            <link type="array">
                                <type>popup</type>
                                <title>Link</title>
                                <icon>link_popup.gif</icon>
                                <JSopenParams>height=300,width=500,status=no,menubar=no,resizable=yes,scrollbars=yes</JSopenParams>
                                <module type="array">
                                    <name>wizard_link</name>
                                </module>
                            </link>
                        </wizards>
                    </config>
                </TCEforms>
            </field_link_url>
            <field_link_text type="array">
                <TCEforms type="array">
                    <label>field_link_text</label>
                    <config type="array">
                        <type>input</type>
                        <size>48</size>
                        <eval>trim</eval>
                    </config>
                </TCEforms>
            </field_link_text>
            <field_image type="array">
                <TCEforms type="array">
                    <label>field_image</label>
                    <config type="array">
                        <type>group</type>
                        <internal_type>db</internal_type>
                        <allowed>sys_file</allowed>
                        <appearance type="array">
                            <elementBrowserAllowed>gif,jpg,jpeg,png</elementBrowserAllowed>
                            <elementBrowserType>file</elementBrowserType>
                        </appearance>
                        <max_size>40000</max_size>
                        <show_thumbs>1</show_thumbs>
                        <size>1</size>
                        <maxitems>1</maxitems>
                        <minitems>0</minitems>
                    </config>
                </TCEforms>
            </field_image>
        </el>
    </ROOT>
</T3DataStructure>
